<nav class="navbar navbar-expand-sm navbar-dark heading">
  <p><%= kindOfDay %></p>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% if (toDoLists.length > 0) { %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Select another list
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% toDoLists.forEach((item, i) => { %>
              <a class="dropdown-item" href="<%= item.listURL %>"><%= item.listName %></a>
            <% }); %>
          </div>
        </li>
      <% } else { %>
        <li class="nav-item">
          <a class="nav-link disabled">
              - No other lists -
           </a>
        </li>
      <% } %>
    </ul>
    <form class="form-inline my-2 my-sm-0 ml-md-2"  action="/create" method="post">
      <input name="newListName" class="form-control" type="text" placeholder="Create new list" aria-label="Search" maxlength="25">
    </form>
    <form class="form-inline my-2 my-sm-0 ml-md-2"  action="/deletelist" method="post">
      <button class="btn delete-button" type="submit" name="button" value="<%= listName %>">
        <% if ('To do list' == listName) { %>
          Reset list
        <% } else { %>
          Delete list
        <% } %>
      </button>
    </form>
  </div>
</nav>
